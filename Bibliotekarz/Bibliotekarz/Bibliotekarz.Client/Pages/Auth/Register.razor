@page "/register"

<MudPaper Class="pa-4 mx-auto mt-6">
    <MudText Typo="Typo.h5">Rejestracja</MudText>
    
    <MudTextField Label="Użytkownik" @bind-Value="_model.UserName" />
    <MudTextField Label="E-mail" @bind-Value="_model.Email" />
    <MudTextField Label="Hasło" @bind-Value="_model.Password"
                  InputType="InputType.Password" />
    
    <MudButton Color="Color.Primary" 
               Variant="Variant.Filled" 
               OnClick="OnRegisterClicked"
               Class="mt-4">Rejestracja</MudButton>
    
    <MudText Color="Color.Success">@_info</MudText>
    <MudText Color="Color.Error">@_error</MudText>
    

</MudPaper>
