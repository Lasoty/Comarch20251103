<div class="card">
    <div class="card-header">
        @if (Header is not null)
        {
            @Header
        }
        else
        {
            <h4>Domyślny nagłówek</h4>
        }
    </div>
    
    <div class="card-body">
        @Body
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? Header { get; set; }
    [Parameter]
    public RenderFragment? Body { get; set; }
}
