@page "/"
@using ComarchCwiczenia.Client.Components.Cascade
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<ImageComponent width="60px" height="100px" />


<h1>Toggle the options</h1>

<input type="checkbox" @bind-value="firstOptionValue"/> First option <br />

<input type="checkbox" @bind-value="secondOptionValue"/> First option <br />

<CascadingValue Name="FirstOption" Value="@firstOptionValue">
    <CascadingValue Name="SecondOption" Value="@secondOptionValue">
        
        <FirstLevelComponent />

    </CascadingValue>
</CascadingValue>

<button class="btn btn-primary" @onclick="NavigateToRelativeUrl">Relative</button>
<button class="btn btn-secondary" @onclick="NavigateToAbsoluteUrl">Absolute</button>
<button class="btn btn-primary" @onclick="NavigateWithForceLoad">Force load</button>
<button class="btn btn-secondary" @onclick="NavigateWithReplaceHistory">Replace history</button>

<Child>
    <h4>
        Message from parent!
    </h4>
</Child>


<Card>
    <Header>
        <h2>Nagłówek karty</h2>
    </Header>
    
    <Body>
    <p>
        Jakiś tam tekst
    </p>
    </Body>
</Card>


@code
{
    bool firstOptionValue;
    bool secondOptionValue;

    private void NavigateToRelativeUrl()
    {
        Navigation.NavigateTo("/weather");
    }

    private void NavigateToAbsoluteUrl()
    {
        Navigation.NavigateTo("https://google.com");
    }

    private void NavigateWithForceLoad()
    {
        Navigation.NavigateTo("/weather", true);
    }

    private void NavigateWithReplaceHistory()
    {
        Navigation.NavigateTo("/weather", false, true);
    }
}
