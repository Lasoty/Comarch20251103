@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p role="status">Multiple count: @multipleCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<MyFirstsComponent OnMultipleThree="@OnMyFirstComponentMultipleOnThree"
                   @bind-CurrentCounterValue="@currentCount" />

@code {

    private int currentCount = 0;
    private int multipleCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void OnMyFirstComponentMultipleOnThree(int value)
    {
        multipleCount = value;
    }

}
